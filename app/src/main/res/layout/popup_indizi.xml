<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/popup_indizi_width"
    android:layout_height="@dimen/popup_indizi_height"
    android:background="#15EE44">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/container"
        android:layout_margin="10dp"
        android:weightSum="1">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
             >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="Indizio zona San Lorenzo Pin 3"
        android:id="@+id/popupIndiziTitolo"
        android:layout_span="2"
        android:textSize="30dp"
        android:textStyle="bold"
        />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="131dp"
            android:orientation="horizontal"
            android:layout_margin="15dp"
            android:layout_weight="1.10">
            <ImageView
                android:layout_width="@dimen/image_popup_indizi_width"
                android:layout_height="@dimen/image_popup_indizi_height"
                android:layout_below="@+id/popupIndiziImmagine"
                android:id="@+id/popupIndiziImmagine"
                android:src="@drawable/pin_icon"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Indizio zona San Lorenzo Pin 3\n bla bla bla"
                android:id="@+id/popupIndizioDescrizione"
                android:gravity="center"
                android:textSize="25dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center"

            >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ok"
                    android:id="@+id/popupIndiziBtnOk"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Altro indizio"
                    android:id="@+id/popupIndiziBtnAltroIndizio"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
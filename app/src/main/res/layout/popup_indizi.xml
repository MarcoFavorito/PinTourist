<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/container"
        android:background="#15EE44"
    >
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Indizio zona San Lorenzo Pin 3"
        android:id="@+id/popupIndiziTitolo"
        android:layout_span="2"
        android:textSize="20dp"
        android:textStyle="bold"
        />
        </TableRow>
        <TableRow>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/popupIndiziTitolo"
                android:id="@+id/popupIndiziImmagine"
                android:src="@drawable/pin_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Indizio zona San Lorenzo Pin 3\n bla bla bla"
                android:id="@+id/popupIndizioDescrizione"
                />
        </TableRow>
        <TableRow>
            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_span="2">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ok"
                    android:id="@+id/popupIndiziBtnOk"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Altro indizio"
                    android:id="@+id/popupIndiziBtnAltroIndizio"/>
            </LinearLayout>

        </TableRow>
    </TableLayout>
</RelativeLayout>
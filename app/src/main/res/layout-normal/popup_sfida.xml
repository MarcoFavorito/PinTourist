<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/popup_sfida_width_normal"
    android:layout_height="@dimen/popup_sfida_height_normal"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/toolbarColor"
            >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="Testo domanda 1"
            android:id="@+id/popupSfidaDomanda"
            android:textSize="30dp"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_weight="0.80" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="50 PT"
            android:id="@+id/popupSfidaTextPunteggio"
            android:layout_weight="0.2"
            android:gravity="center"
            android:layout_gravity="end" />
        </FrameLayout>


    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/container"
    android:orientation="horizontal"
    android:weightSum="1">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/popupSfidaImmagine"
        android:src="@drawable/trilussa"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="right"
        android:layout_margin="5dp"
        android:weightSum="1">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:text="New Button"
            android:id="@+id/risposta1"
            android:background="@drawable/bottone_risposta_domanda"
            android:layout_margin="5dp"
            android:textSize="@dimen/buttonTextSize_normal"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="New Button"
            android:id="@+id/risposta2"
            android:layout_weight="0.25"
            android:background="@drawable/bottone_risposta_domanda"
            android:layout_margin="5dp"
            android:textSize="@dimen/buttonTextSize_normal"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="New Button"
            android:id="@+id/risposta3"
            android:layout_weight="0.25"
            android:background="@drawable/bottone_risposta_domanda"
            android:layout_margin="5dp"
            android:textSize="@dimen/buttonTextSize_normal"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="New Button"
            android:id="@+id/risposta4"
            android:layout_weight="0.25"
            android:background="@drawable/bottone_risposta_domanda"
            android:layout_margin="5dp"
            android:textSize="@dimen/buttonTextSize_normal"
            />
    </LinearLayout>

</LinearLayout>
</LinearLayout>